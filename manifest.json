{
    "manifest_version": 3,
    "name": "bindu",
    "version": "1.5.1",
    "description": "Practical and opinionated dictionary extension for Chrome.",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "permissions": [
        "contextMenus",
        "storage",
        "offscreen"
    ],
    "host_permissions": [
        "https://www.merriam-webster.com/*",
        "https://media.merriam-webster.com/*",
        "https://api.dictionaryapi.dev/*"
    ],
    "background": {
        "service_worker": "src/serviceWorker.js",
        "type": "module"
    },
    "action": {
        "default_title": "Bindu Dict"
    },
    "options_ui": {
        "page": "src/options.html",
        "open_in_tab": false
    },
    "web_accessible_resources": [],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "src/content.js"
            ],
            "css": [
                "src/window.css"
            ],
            "run_at": "document_idle"
        }
    ]
}
